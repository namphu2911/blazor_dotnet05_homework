@page "/"

<PageTitle>Trang chủ</PageTitle>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1>Xin chào 👋</h1>
        <h3 class="text-primary">@FullName</h3>
        <p class="text-muted">@JobTitle</p>
    </div>

    <hr />

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>👤 Giới thiệu</h4>
            <p>
                Tôi là <b>@FullName</b>, hiện đang làm việc trong lĩnh vực
                <b>@Field</b>. Tôi có kinh nghiệm phát triển ứng dụng
                desktop và web, đặc biệt với các công nghệ .NET và frontend hiện đại.
            </p>
        </div>

        <div class="col-md-6">
            <h4>📌 Thông tin cơ bản</h4>
            <ul class="list-unstyled">
                <li><b>Vị trí:</b> @JobTitle</li>
                <li><b>Kỹ năng chính:</b> @MainSkills</li>
                <li><b>Email:</b> @Email</li>
                <li><b>Github:</b> <a href="@GithubUrl" target="_blank">namphu2911</a></li>
            </ul>
        </div>
    </div>
</div>

@code {
    string FullName = "Nguyễn Nam Phú";
    string JobTitle = ".NET Developer";
    string Field = "phát triển phần mềm";
    string MainSkills = "C#, WPF, ASP.NET, React";
    string Email = "phu.namnguyen2911@gmail.com";
    string GithubUrl = "https://github.com/namphu2911";
}